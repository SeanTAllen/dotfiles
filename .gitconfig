[user]
  name  = Sean T Allen
  email = sean@monkeysnatchbanana.com

[core]
  excludesfile = /Users/sean/.gitignore
  pager        = /usr/local/opt/git/share/git-core/contrib/diff-highlight/diff-highlight
  trustctime   = false

[color]
  ui          = auto
  diff        = auto

[format]
  pretty = format:* %Cred%h%Creset - %s (%Cgreen%cr%Creset) <%an>

[alias]
  amend    = commit --amend
  branches = branch --list
  ci       = commit
  co       = checkout
  di       = diff
  div      = divergence
  lol      = log --graph --decorate --pretty=oneline --abbrev-commit
  lola     = log --graph --decorate --pretty=oneline --abbrev-commit --all
  out      = outgoing
  pom      = push origin master
  ready    = rebase -i @{u}
  remotes  = remote -v
  snap     = commit -a -m 'Back to snapshot.'
  st       = status
  tags     = tag --list
  track    = checkout -t
  wipe     = reset -â€“hard HEAD
  wth      = what-the-hell-just-happened

[push]
  default = simple

[branch]
  autosetuprebase = always

[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[diff]
  tool = Kaleidoscope

[difftool]
  prompt = false

[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true

[mergetool]
  prompt = false

[merge]
  tool = Kaleidoscope

[rebase]
  autostash = true
